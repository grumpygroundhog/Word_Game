<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/activity_main"
    android:background="#fffefefe">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/gradient"
        android:scaleType="matrix"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/scrambledWord"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrambledWord"
        android:gravity="center"
        android:textSize="35sp"
        android:autoText="false"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get New Word"
        android:id="@+id/getWord"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:gravity="center"
        android:hint="Descramble Here!"
        android:elegantTextHeight="false"
        android:textSize="25sp"
        android:singleLine="false"
        android:textColor="#000000"
        android:autoText="false"
        android:textColorHint="#000000"

        android:layout_below="@+id/scrambledWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:editable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Word"
        android:id="@+id/checkWord"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:id="@+id/score"

        android:textColor="#ff000000"
        android:textSize="35sp"
        android:layout_above="@+id/getWord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Time:" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGame"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/getWord"
        android:layout_toEndOf="@+id/getWord"
        android:layout_marginLeft="20dp" />


</RelativeLayout>