<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/activity_main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/book"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrambledWord"
        android:gravity="center"
        android:textSize="35sp"
        android:autoText="false"
        android:textColor="#000000"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/score"
        android:layout_alignStart="@+id/score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get New Word"
        android:id="@+id/getWord"

        android:layout_below="@+id/scrambledWord"
        android:layout_alignRight="@+id/input"
        android:layout_alignEnd="@+id/input" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:gravity="center"
        android:hint="Descramble Here!"
        android:elegantTextHeight="false"
        android:textSize="25sp"
        android:singleLine="false"
        android:textColor="#000000"
        android:autoText="false"
        android:textColorHint="#000000"

        android:layout_marginRight="73dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Word"
        android:id="@+id/checkWord"
        android:layout_below="@+id/getWord"
        android:layout_alignRight="@+id/getWord"
        android:layout_alignEnd="@+id/getWord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:id="@+id/score"

        android:textColor="#ff000000"
        android:textSize="35sp"
        android:layout_marginLeft="73dp"
        android:layout_marginStart="73dp"
        android:layout_below="@+id/scrambledWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/newGame"
        android:layout_below="@+id/checkWord"
        android:layout_alignRight="@+id/checkWord"
        android:layout_alignEnd="@+id/checkWord" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textColor="#000000"
        android:textSize="35sp"
        android:text="Time:"
        android:layout_above="@+id/scrambledWord"
        android:layout_alignLeft="@+id/scrambledWord"
        android:layout_alignStart="@+id/scrambledWord"
        android:layout_marginBottom="20dp" />


</RelativeLayout>